    <!-- Floating hearts background -->
    <div class="heart-bg" style="top: 10%; left: 10%;">üíï</div>
    <div class="heart-bg" style="top: 20%; right: 15%; animation-delay: 2s;">üíñ</div>
    <div class="heart-bg" style="bottom: 15%; left: 20%; animation-delay: 4s;">üíó</div>
    <div class="heart-bg" style="bottom: 25%; right: 10%; animation-delay: 6s;">üíù</div>
    <div class="heart-bg" style="top: 50%; left: 5%; animation-delay: 3s;">üíò</div>
    <div class="heart-bg" style="top: 60%; right: 8%; animation-delay: 5s;">üíì</div>

    <div class="container">
        <!-- Question Screen -->
        <div class="question-screen" id="questionScreen">
            <h1>Be My Valentine?</h1>
            <img src="https://media1.tenor.com/m/erhOwwEWTLEAAAAd/minions-flushed.gif" alt="Cute minion" class="emoji">
            <p class="message">Will you be my girlfriend? üíï</p>
            <div class="buttons">
                <button class="btn btn-yes" id="yesBtn">Yes! üíñ</button>
                <button class="btn btn-no" id="noBtn">No</button>
            </div>
        </div>

        <!-- Success Screen -->
        <div class="success-screen" id="successScreen">
            <h2>Yay! üéâ</h2>
            <div class="gif-container">
                <img src="https://i.pinimg.com/originals/a7/74/7c/a7747ca28a379689d23eb9774ddad302.gif" alt="Celebration">
            </div>
            <p class="celebration-text">I knew you'd say yes! üíï</p>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const questionScreen = document.getElementById('questionScreen');
        const successScreen = document.getElementById('successScreen');

        let noClickCount = 0;
        let yesFontSize = 1.3; // em units
        let noPadding = 18; // px units

        const messages = [
            "Will you be my my girlfriend? üíï",
            "Are you sure, no? ü•∫",
            "still no? Please? üíî",
            "Think about it... üí≠",
            "hmm? üôè",
            "You're breaking my heart... üíî",
            "We can be together, you know? üò≠",
            "Come on... ü•π",
            "hmphhh! üò¢",
            "cinta pleaseee! üò≠üíï"
        ];

        noBtn.addEventListener('click', () => {
            noClickCount++;
            
            // Update message
            const messageEl = document.querySelector('.message');
            if (noClickCount < messages.length) {
                messageEl.textContent = messages[noClickCount];
            }

            // Grow yes button
            yesFontSize += 0.3;
            yesBtn.style.fontSize = yesFontSize + 'em';
            yesBtn.style.padding = (18 + noClickCount * 3) + 'px ' + (40 + noClickCount * 5) + 'px';

            // Shrink no button
            noPadding = Math.max(5, noPadding - 2);
            const newFontSize = Math.max(0.7, 1.3 - noClickCount * 0.1);
            noBtn.style.fontSize = newFontSize + 'em';
            noBtn.style.padding = noPadding + 'px ' + (noPadding * 2) + 'px';

            // Add bounce animation to yes button
            yesBtn.style.animation = 'none';
            setTimeout(() => {
                yesBtn.style.animation = 'pulse 1.5s ease-in-out infinite';
            }, 10);

            // After 5 clicks, make no button nearly invisible
            if (noClickCount >= 5) {
                noBtn.style.opacity = Math.max(0.1, 1 - (noClickCount - 5) * 0.15);
                noBtn.style.cursor = 'not-allowed';
            }

            // After 8 clicks, hide no button completely
            if (noClickCount >= 8) {
                noBtn.style.display = 'none';
            }
        });

        yesBtn.addEventListener('click', () => {
            // Hide question screen
            questionScreen.classList.add('hidden');
            
            // Show success screen
            successScreen.classList.add('show');

            // Create confetti
            createConfetti();
        });

        function createConfetti() {
            const colors = ['#ff1e8d', '#ff6b9d', '#ff4081', '#ffc0cb', '#ff69b4'];
            
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 2 + 's';
                    confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                    document.body.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 5000);
                }, i * 30);
            }
        }
    </script>
</body>
